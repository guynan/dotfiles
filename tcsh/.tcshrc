#######################
# Here are some aliases
#######################

alias odoo8 'echo "Changing into work directory" ;cd ~/work/odoo8/; echo "Pulling content"; git pull; echo "Done!"'

alias odoo9 'echo "Changing into work directory" ;cd ~/work/odoo9/; echo "Pulling content"; git pull; echo "Done!"'

# This one is to add vim-like exit to shell because cool

alias :wq 'exit'

# This adds colours to things like ls and grep

alias ls 'ls --color=auto'
alias grep 'grep --color=auto'
alias fgrep 'fgrep --color=auto'
alias egrep 'egrep --color=auto'

# This is supposed to add colours to 'ls' but don't think it actually does

setenv LS_COLORS  'pi=40;33:bd=40;33;01:cd=40;33;01:or=01;05;37;41:mi=01;05;37;41:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.xbm=01;35:*.xpm=01;35:*.png=01;35:*.mng=01;35:*.tif=01;35:*.tiff=01;35:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.rar=01;31:*.bz2=01;31:*.bz=01;31:*.tz=01;31:*.rpm=01;31:*.deb=01;31:*.cpio=01;31:*.7z=01;31:*.svg=01;35:*.xcf=01;35'

# Here are some other additions to keep me sane
alias free 'free -m'

alias b '/bin/bash'

alias pydie 'pkill python'

alias hello 'echo; echo "              Hello there";echo; cat ~/.ascii'

alias ll 'ls -l'
alias la 'ls -a'

