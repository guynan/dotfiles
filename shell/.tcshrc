#######################
#Environment variables
#######################

setenv EDITOR '/usr/bin/vim'

#######################
# Configuring the prompt

# Colors!
set     red="%{\033[1;31m%}"
set   green="%{\033[0;32m%}"
set  yellow="%{\033[1;33m%}"
set    blue="%{\033[1;34m%}"
set magenta="%{\033[1;35m%}"
set    cyan="%{\033[1;36m%}"
set   white="%{\033[0;37m%}"
set     end="%{\033[0m%}" 

# Setting the actual prompt.  I made two separate versions for you to try, pick
# whichever one you like better, and change the colors as you want.  Just don't
# mess with the ${end} guy in either line...  Comment out or delete the prompt you don't use.

set prompt="%B%m%b ${white}%c${cyan} >${end} "
#set prompt="[${green}%n${blue}@%m ${white}%~ ]${end} "
# http://kb.mit.edu/confluence/pages/viewpage.action?pageId=3907171
# Clean up after ourselves...
unset red green yellow blue magenta cyan yellow white end

if ( -f $HOME/.tcsh_root_profile) then
	source $HOME/.tcsh_root_profile
endif
